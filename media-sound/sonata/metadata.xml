	</longdescription>
	<use>
		<flag name="mpd">Support for mpd fetching</flag>
		<flag name="dbus">Support for dbus fetching</flag>
		<flag name="taglib">Enable support for taglib</flag>
	</use>
	<upstream>
		<remote-id type="github">multani/sonata</remote-id>
	</upstream>
